{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "lib": ["es6", "dom"]
  },
  "include": ["src", "vite-env.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
